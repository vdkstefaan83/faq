{% extends "base.html.twig" %}

{% block title %}Admin Login - FAQ System{% endblock %}

{% block content %}
<div class="max-w-md mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h1 class="text-2xl font-bold text-center mb-6">Admin Login</h1>
        
        {% if error_message %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ error_message }}
            </div>
        {% endif %}
        
        <form method="POST" class="space-y-4">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input type="text" id="username" name="username" required 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                       value="{{ username|default('') }}">
            </div>
            
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input type="password" id="password" name="password" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            
            <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Login
            </button>
        </form>
        
        <div class="mt-6 text-center">
            <a href="/" class="text-blue-600 hover:text-blue-800">‚Üê Back to Home</a>
        </div>
    </div>
    
    <div class="mt-8 bg-gray-100 rounded-lg p-4 text-sm text-gray-600">
        <h3 class="font-semibold mb-2">Default Login:</h3>
        <p><strong>Username:</strong> admin</p>
        <p><strong>Password:</strong> password</p>
        <p class="text-xs mt-2 text-gray-500">Change these credentials in your .env file</p>
    </div>
</div>
{% endblock %}