{% extends "base.html.twig" %}

{% block title %}Admin Dashboard - FAQ System{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>
    
    {% if success_message %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ success_message }}
            {% if article_link %}
                <div class="mt-2">
                    <strong>Article Link:</strong> 
                    <input type="text" value="{{ base_url }}{{ article_link }}" readonly class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg p-1 w-full mt-1" onclick="this.select()">
                </div>
            {% endif %}
        </div>
    {% endif %}
    
    <div class="mb-8 flex flex-wrap gap-4">
        <a href="/admin/change-password" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors">
            Change Password
        </a>
        <a href="/admin/create-user" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors">
            Create Admin User
        </a>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold mb-4">Create New Article</h2>
        
        <form method="POST" class="space-y-4">
            <div>
                <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Article Title</label>
                <input type="text" id="title" name="title" required 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            
            <div>
                <label for="content" class="block text-sm font-medium text-gray-700 mb-1">Article Content</label>
                <textarea id="content" name="content" rows="10" required
                         class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
            
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Create Article
            </button>
        </form>
    </div>
    
    <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold mb-4">Existing Articles</h2>
        
        {% if articles %}
            <div class="space-y-3">
                {% for article in articles %}
                    <div class="border border-gray-200 rounded-lg p-4">
                        <h3 class="font-semibold text-lg">{{ article.title }}</h3>
                        <p class="text-gray-600 text-sm">Created: {{ article.created_at }}</p>
                        <p class="text-gray-800 mt-2">{{ article.content|slice(0, 150) }}{% if article.content|length > 150 %}...{% endif %}</p>
                        <div class="mt-2">
                            <span class="text-sm font-medium">Link: </span>
                            <input type="text" value="{{ base_url }}/search.php?search={{ article.title|url_encode }}" readonly 
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-xs rounded p-1 w-64" onclick="this.select()">
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-500">No articles found.</p>
        {% endif %}
    </div>
</div>
{% endblock %}